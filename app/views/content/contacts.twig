{{ set(this, 'title', page.info.title ? page.info.title : page.info.name ) }}
{{ set(this, 'description', page.info.description ? page.info.description : page.info.name) }}

<div class="breadcrumbs">
    <div class="container"><a href="{{ this.params.home_url }}">{{ t('app', 'Главная') }}</a> <span class="breadcrumbs-arrow">|</span> <span class="current">{{ page.info.name }}</span></div>
</div>

<div class="box">
    <div class="container clearfix">
        <div class="colls-box">
            <div class="left main-coll">
                <div class="title title-left"><h2>{{ t('app', 'Обратная связь') }}</h2></div>
                <p>
                    Уважаемые пользователи, если у вас возникли вопросы, воспользуйтесь формой обратной связи или свяжитесь с нами по email и указанным номерам. Также вы можете заказать звонок и мы перезвоним вам сами.
                </p>
                <div class="form feedback-form">
                    <ul>
                        <li><input type="text" name="name" value="" placeholder="{{ t('app', 'Ваше имя') }}*" /></li>
                        <li class="clearfix">
                            <div class="left"><input type="email" name="email" value="" placeholder="Ваш email*" /></div>
                            <div class="right"><input type="tel" name="phone" value="" placeholder="Ваш телефон" /></div>
                        </li>
                        <li><textarea placeholder="{{ t('app', 'Текст сообщения') }}*" name="message"></textarea></li>
                        <li class="gui-message"></li>
                        <li style="text-align: right;"><button class="btn gui-request" data-module="user" data-data="method=feedback" data-form=".feedback-form">{{ t('app', 'Отправить') }}</button></li>
                    </ul>
                </div>
            </div>
            <div class="right sidebar">
                <div class="side side-contacts">
                    <div class="title title-left"><h1>{{ page.info.h1? page.info.h1: page.info.name }}</h1></div>
                    {{ page.info.text | raw }}
                    <a class="btn gui-request" data-module="user" data-data="method=callback_window">{{ t('app', 'заказать звонок') }}</a>
                </div>
            </div>
        </div>
    </div>
</div>
